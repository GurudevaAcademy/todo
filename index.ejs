	<link href="https://fonts.googleapis.com/css2?family=Cairo&family=Ranchers&display=swap" rel="stylesheet">
	<style type="text/css">
	h2{
	padding: 5px;
	color: #93B5E1;
	font-family: 'Ranchers', cursive;
}
body{
	background-color: #F5EFEF;
	font-family: 'Cairo', sans-serif;
}
.info{
	left: 25%;
	right: 25%;
}
</style>

</head>
<body>
<div class="container info">
<h2>A simple ToDo List App</h2>
<form action="/add" method="POST">
	<div class="form-group">
<input type="text" name="newtask" placeholder="add new task here">
<button class="btn btn-success">Add Task</button>
<% for(var i=0;i< task.length; i++) { %>
<li>
	 <input type="checkbox" name="check" value="<%= task[i] %>">
	 <%= task[i] %>
</li>
<% } %>

<button formaction="/delete" type="submit"class="btn btn-danger">Delete</button>
<!-- <% for(var i=0;i< complete.length; i++) { %> 
<li>
	 <input type="checkbox" checked>
	 <%= task[i] %>
</li>
<!-- <% } %> --></div>
</form>


</div>
	
